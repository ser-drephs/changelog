{
    "name": "Rust Container",
    "dockerFile": "dockerfile",
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "settings": {
        "lldb.executable": "/usr/bin/lldb",
        "files.watcherExclude": {
            "**/target/**": true
        },
        "rust-analyzer.checkOnSave.command": "clippy",
        // "terminal.integrated.defaultProfile.linux": "/bin/bash"
    },
    "extensions": [
        "ms-vscode.cpptools",
        "vadimcn.vscode-lldb",
        "rust-lang.rust",
        "mutantdino.resourcemonitor",
		"tamasfe.even-better-toml",
		"serayuzgur.crates"
    ],
    "remoteUser": "vscode",
    "postCreateCommand": "cd target && git clone https://github.com/conventional-commits/conventionalcommits.org.git && cd conventionalcommits.org.git && git remote remove origin"
}